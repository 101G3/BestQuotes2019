<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent"
    tools:context=".SliderScreen">



    <android.support.v4.view.ViewPager
        android:id="@+id/SliderscreenViewPager_id"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_above="@id/btn_next"

        android:layout_marginTop="57dp"
        android:layout_marginBottom="-58dp" />


    <ImageView
        android:id="@+id/sliderscreenimage"
        android:layout_width="312dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
       >


    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sliderscreentitle"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="350sp"
        android:textStyle="bold"
        android:textSize="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sliderscreentitle"
        android:id="@+id/sliderscreendecription"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        />

    <Button
        android:visibility="invisible"
        android:id="@+id/btn_getstarted"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:layout_below="@id/sliderscreendecription"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:background="@drawable/nextbutton_style"
        android:text="Get Started" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn_next"
        android:textColor="@color/DarkBlue"

        android:layout_below="@id/sliderscreendecription"
        android:layout_marginTop="80sp"
        android:backgroundTintMode="screen"
        android:layout_marginBottom="0sp"
        android:layout_alignParentRight="true"


        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/btn_skip"
        android:textColor="@color/DarkBlue"

        android:layout_below="@id/sliderscreendecription"
        android:layout_marginTop="80sp"
        android:backgroundTintMode="screen"
        android:layout_marginBottom="0sp"
        android:layout_alignParentLeft="true"


        />
<android.support.design.widget.TabLayout
    android:layout_width="150sp"
   android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    app:tabBackground="@drawable/screenslider_selector"
    app:tabIndicatorColor="@color/White"
    android:id="@+id/sliderscreentablayout"
    app:tabIconTintMode="screen"
    android:layout_marginTop="510dp"
    />


</RelativeLayout>